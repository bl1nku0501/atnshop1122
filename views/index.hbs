        {{!-- //search --}}
        <div class="home_page"> 
            <div class="input-group" style="margin-left:7%">
                <form method="POST" action="/search"class="mt-2 col-md-10 px-0">
                <input type="text" class="form-control" list="title_product"  name="txtName"placeholder="Enter name product">
                </form>
            </div>
{{!-- show product --}}
        <div class="products">
            <div class="mt-4">
                <div class="row">
            {{#each products}}
        <div class="card" style="width:21rem; ; margin:1.3rem">
            <img class="card-img-top  " style="width:300px;height:260px; margin-left:18px" src="{{picURL}}">
            <div class="card-body">
                <h5 class="card-title text-capitalize">{{name}}</h5>
                <div class="row justify-content-between mx-0"><h6 class="text-danger">Price: {{price}}$</h6>
                </div>
                <div class="row justify-content-between mx-0">
                <a class="btn btn-success" style="margin-right:5px;flex:1" href="/edit/{{_id}}">Edit</a>
                <a class="btn btn-danger" style="margin-right:5px;flex:1" onclick="return confirm('Are your sure?')" href="/delete/{{_id}}">Delete</a>
        </div>
            </div>
        </div>
                {{/each}}
        </div>
        </div>
    </div>
