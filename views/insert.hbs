    <div class="container">
            <h1>Add Product</h1>
    <form action="/insert" method="post">
        <h5>Product Name</h5>
        <div class="input-group mb-3">
            <input type="text" name="txtName" id="txtName" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
            <label style="color: red;">{{nameError}}</label>
        </div>
        <h5>Price</h5>
        <div class="input-group mb-3">
            <input type="text" name="txtPrice" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
            <label style="color: red;">{{errorPrice}}</label>
        </div>
        <h5>Image Url</h5>
        <div class="input-group mb-3">
            <input type="text" name="txtPicURL" id="txtPicURL" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
            <br>
            <label style="color: red;">{{urlError}}</label>
        </div>
            
            <button type="submit" value="Insert" class="btn btn-outline-primary">ADD New Product</button>
        </form>
        </div>
        
